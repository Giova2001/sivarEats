<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="?attr/colorSurface"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutline">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Imagen del Platillo -->
        <ImageView
            android:id="@+id/img_platillo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/campero1"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:padding="4dp" />

        <!-- Información del Platillo -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp">

            <!-- Nombre -->
            <TextView
                android:id="@+id/tv_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Combo Wok"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Rating (Estrellas) -->
            <LinearLayout
                android:id="@+id/layout_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <!-- Estrellas (simplificado con texto) -->
                <TextView
                    android:id="@+id/tv_stars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="★★★★☆"
                    android:textColor="#FFC107"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Detalles: Categoría • Precio • Compras -->
            <TextView
                android:id="@+id/tv_detalles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="China • $6.25 • 1.2 k Comprado"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="12sp" />

            <!-- Descripción -->
            <TextView
                android:id="@+id/tv_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Carne al wok y arroz cantones"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Botones de Acción -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Botón Favorito -->
            <ImageView
                android:id="@+id/btn_favorito"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_corazon"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:layout_marginBottom="8dp"
                app:tint="?attr/colorOnSurfaceVariant" />

            <!-- Botón Agregar al Carrito -->
            <ImageView
                android:id="@+id/btn_agregar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_cart"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                app:tint="@color/info" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

