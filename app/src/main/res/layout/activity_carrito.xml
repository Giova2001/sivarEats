<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCF5FD"
    tools:context=".CarritoActivity">

    <!-- Botón de regresar -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnRegresarCarrito"
        android:layout_width="50dp"
        android:layout_height="49dp"
        android:contentDescription="Regresar"
        app:backgroundTint="#FCF5FD"
        app:layout_constraintMarginStart="16dp"
        app:layout_constraintMarginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/homeAsUpIndicator" />
    <!-- Titulo de la vista -->
    <TextView
        android:id="@+id/textCarrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:text="Carrito"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btnRegresarCarrito"
        app:layout_constraintMarginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/btnRegresarCarrito"
        app:layout_constraintTop_toTopOf="@id/btnRegresarCarrito"
        app:layout_constraintVertical_bias="1.0" />

    <!-- Lista de productos del carrito -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCarrito"
        android:layout_width="409dp"
        android:layout_height="449dp"
        android:clipToPadding="false"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/layoutTotales"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnRegresarCarrito"
        tools:listitem="@layout/item_carrito" />

    <!-- Sección inferior: código y totales -->
    <LinearLayout
        android:id="@+id/layoutTotales"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Código promocional -->
        <TextView
            android:text="Código promocional"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <EditText
                android:id="@+id/etCodigo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Ingrese el código"
                android:background="@drawable/edittext_background"
                android:padding="8dp"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnAplicar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aplicar"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1F41EC"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Totales -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvSubtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtotal: $27.99"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvDelivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery: $2.50"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: $30.49"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Botón confirmar -->
        <Button
            android:id="@+id/btnConfirmar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONFIRMAR"
            android:backgroundTint="#1F41EC"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
