<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".ui.profile.SobreAppActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_return"
        app:title="Sobre la app"
        app:titleCentered="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Términos y condiciones"
                android:textColor="?attr/colorOnSurface"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Al registrarte y utilizar SivarEats, aceptas y te comprometes a cumplir con los presentes Términos y Condiciones:"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Uso de la aplicación"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="El acceso y uso de esta aplicación están destinados únicamente a fines personales y no comerciales. Está prohibido el uso indebido de la plataforma, incluyendo actos de fraude, manipulación de pedidos o intentos de acceso no autorizado."
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Registro y cuenta"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cada usuario es responsable de la veracidad de la información proporcionada al registrarse, así como de mantener la confidencialidad de sus credenciales de acceso."
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Pagos y métodos de pago"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Las transacciones realizadas a través de la aplicación deberán efectuarse con métodos de pago válidos. La seguridad de los datos financieros se gestiona bajo estándares de encriptación y no serán compartidos con terceros sin consentimiento."
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. Privacidad y protección de datos"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nos comprometemos a proteger tu información personal de acuerdo con nuestra Política de Privacidad. Tus datos no serán compartidos con terceros sin tu autorización, salvo requerimiento legal."
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5. Responsabilidades del usuario"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="El usuario se compromete a hacer un uso correcto de la aplicación y abstenerse de actividades que puedan afectar el funcionamiento del sistema, la seguridad de otros usuarios o la reputación de la plataforma."
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6. Modificaciones de los términos"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="La aplicación podrá actualizar estos Términos y Condiciones en cualquier momento. Se notificará a los usuarios sobre cambios importantes a través de la app o por correo electrónico."
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7. Suspensión o cancelación de cuenta"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nos reservamos el derecho de suspender o cancelar cuentas en caso de incumplimiento de los presentes términos, actividades fraudulentas o conductas indebidas."
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>